<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:paddingLeft="@dimen/activity_horizontal_margin"

    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"

    android:paddingBottom="@dimen/activity_vertical_margin"

    android:background="#08253c"

    tools:context=".MainActivity">

    <TextView

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="@string/mainmenu"

        android:id="@+id/mainmenu"

        android:textColor="#ffffff"

        android:textSize="30sp"

        android:layout_marginTop="20dp"

        android:layout_marginLeft="10dp"

        android:layout_marginStart="10dp"

        android:layout_alignParentTop="true"

        android:layout_alignParentLeft="true"

        android:gravity="center"

        android:layout_centerHorizontal="true" />


    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aufgaben rechnen"
        android:id="@+id/edittasks"
        android:layout_below="@id/mainmenu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:layout_weight="1"
        />


    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistik"
        android:id="@+id/statistic"
        android:layout_below="@+id/edittasks"
        android:layout_marginTop="42dp"
        android:layout_weight="1"

        android:layout_alignLeft="@+id/edittasks"
        android:layout_alignStart="@+id/edittasks"
        android:layout_alignRight="@+id/edittasks"
        android:layout_alignEnd="@+id/edittasks" />

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ausloggen"
        android:id="@+id/logout"
        android:layout_below="@+id/statistic"
        android:layout_marginTop="42dp"
        android:layout_weight="1"
        android:layout_alignLeft="@+id/statistic"
        android:layout_alignStart="@+id/statistic"
        android:layout_alignRight="@+id/statistic"
        android:layout_alignEnd="@+id/statistic" />

</RelativeLayout>