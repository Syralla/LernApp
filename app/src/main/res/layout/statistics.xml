<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#08253c"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:id="@+id/user"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hier findest Du Deine Statistik"
        android:id="@+id/statistic_view"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:layout_below="@+id/user"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="So viele Aufgaben hast du richtig:"
        android:id="@+id/rightanswers"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_below="@+id/statistic_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insgesamt: x von x:"
        android:id="@+id/rightwrong"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:layout_below="@+id/rightanswers"
        android:layout_alignLeft="@+id/rightanswers"
        android:layout_alignStart="@+id/rightanswers" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plus: x von x"
        android:id="@+id/plusstat"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:layout_below="@+id/rightwrong"
        android:layout_alignLeft="@+id/rightanswers"
        android:layout_alignStart="@+id/rightwrong" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minus: x von x"
        android:id="@+id/minusstat"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:layout_below="@+id/plusstat"
        android:layout_alignLeft="@+id/plusstat"
        android:layout_alignStart="@+id/plusstat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mal: x von x"
        android:id="@+id/malstat"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:layout_below="@+id/minusstat"
        android:layout_alignLeft="@+id/minusstat"
        android:layout_alignStart="@+id/minusstat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geteilt: x von x"
        android:id="@+id/geteiltstat"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:layout_below="@+id/malstat"
        android:layout_alignLeft="@+id/malstat"
        android:layout_alignStart="@+id/malstat" />

</RelativeLayout>