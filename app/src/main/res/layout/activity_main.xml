<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#08253c"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox_view"
        android:text="Bitte wÃ¤hle mindestens eine Rechenart und eine Zahlenkategorie"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:text="Aufgaben rechnen"
        android:layout_below="@+id/Drei"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:id="@+id/PPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plus"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/checkbox_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:id="@+id/Minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minus"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_alignBaseline="@+id/PPlus"
        android:layout_alignBottom="@+id/PPlus"
        android:layout_toRightOf="@+id/PPlus"
        android:layout_toEndOf="@+id/PPlus" />

    <CheckBox
        android:id="@+id/Mal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mal"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/Minus"
        android:layout_alignBottom="@+id/Minus"
        android:layout_toLeftOf="@+id/Geteilt"
        android:layout_toStartOf="@+id/Geteilt"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />

    <CheckBox
        android:id="@+id/Geteilt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geteilt"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/Mal"
        android:layout_alignBottom="@+id/Mal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:id="@+id/Drei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100-999"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_alignBaseline="@+id/Zwei"
        android:layout_alignBottom="@+id/Zwei"
        android:layout_alignLeft="@+id/Mal"
        android:layout_alignStart="@+id/Mal" />

    <CheckBox
        android:id="@+id/Ein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0-9"
        android:textColor="#ffffff"
        android:textSize="20sp"


        android:layout_alignBaseline="@+id/Zwei"
        android:layout_alignBottom="@+id/Zwei"
        android:layout_toLeftOf="@+id/Zwei"
        android:layout_toStartOf="@+id/Zwei"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp" />

    <CheckBox
        android:id="@+id/Zwei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10-99"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/Minus"
        android:layout_toLeftOf="@+id/Drei"
        android:layout_toStartOf="@+id/Drei" />

</RelativeLayout>
