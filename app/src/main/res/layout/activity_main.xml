<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:paddingLeft="@dimen/activity_horizontal_margin"

    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"

    android:paddingBottom="@dimen/activity_vertical_margin"

    android:background="#08253c"

    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="Aufgabenpaket erstellen"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/Aufgabe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="107dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/Aufgabe"
        android:ems="6"
        android:inputType="number"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ergebnis:"
        android:layout_alignTop="@+id/editText2"
        android:layout_toLeftOf="@+id/editText2"
        android:layout_toStartOf="@+id/editText2"
        android:textColor="#ffffff"
        android:textSize="16sp"/>

    <CheckBox
        android:id="@+id/PPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Aufgabe"
        android:text="Plus"
        android:textColor="#ffffff"
        android:textSize="20sp"/>

    <CheckBox
        android:id="@+id/Minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/PPlus"
        android:text="Minus"
        android:textColor="#ffffff"
        android:textSize="20sp"/>

    <CheckBox
        android:id="@+id/Mal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mal"
        android:layout_below="@+id/Minus"
        android:layout_toRightOf="@+id/Aufgabe"
        android:layout_toEndOf="@+id/Aufgabe"
        android:textColor="#ffffff"
        android:textSize="20sp"/>

    <CheckBox
        android:id="@+id/Geteilt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Mal"
        android:layout_toEndOf="@+id/Aufgabe"
        android:layout_toRightOf="@+id/Aufgabe"
        android:text="Geteilt"
        android:textColor="#ffffff"
        android:textSize="20sp"/>

    <CheckBox
        android:id="@+id/Drei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Zwei"
        android:layout_alignStart="@+id/Zwei"
        android:layout_below="@+id/Zwei"
        android:text="100-999"
        android:textColor="#ffffff"
        android:textSize="20sp"/>

    <CheckBox
        android:id="@+id/Ein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView4"
        android:text="0-9"
        android:textColor="#ffffff"
        android:textSize="20sp"/>

    <CheckBox
        android:id="@+id/Zwei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Ein"
        android:layout_alignStart="@+id/Ein"
        android:layout_below="@+id/Ein"
        android:text="10-99"
        android:textColor="#ffffff"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="41dp"
        android:layout_toEndOf="@+id/Aufgabe"
        android:layout_toRightOf="@+id/Aufgabe"
        android:text="test" />

</RelativeLayout>
